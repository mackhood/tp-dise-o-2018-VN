{{#partial "contenido"}}
    <h1>Dispositivos</h1>

    <table class="table table-stripped">
        <tr>
            <th>Nombre</th>
            <th>Equipo Concreto</th>
            <th>Consumo estimado por hora</th>
            <th>Estado</th>

        </tr>

        {{#each dispositivos}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{equipoConcreto}}</td>
                <td>{{consumoEstimadoPorHora}}</td>
                <td>{{estadoDispositivo}}</td>

                <td><a href="{{url}}">Consumo ultimo periodo</a><td>
                <td><a href="/usuario/dispositivo/bajar/{{id}}">Bajar</a></td>

            </tr>
        {{/each}}
    </table>
{{/partial}}

