{{#partial "contenido"}}
<br>
  
  <h3> Alta de Dispositivos </h3>
  <br>
  <br>
  <form method=POST action="/admin/dispositivosAlta">
  	<div class="form-group">
  		<label for="tipo"> Tipo de Dispositivo: </label>
  		<select name="tipo" required>
  			<option disabled selected value> Seleccione una opcion </opcion>
  		{{#each tipoDisp}}
  			<option name="tipo" value="{{this}}"> {{this}} </option>
  		{{/each}}
  		</select>
  	</div>
  	
  	<div class="form-group">
  		<label for="detalle"> Detalle: </label>
  		<input class="form-control" type="text" name="detalle" required>
  	</div>
  	
  	<div class="form-group">
  		<label for="kwh"> Consumo por hora (KwH): </label>
  		<input class="form-control" type="text" name="kwh" required>
  	</div>
  	
  	<button class="btn btn-success" type="submit"> Dar de Alta </button>
  </form>
  
  <br>
  <label> No encuentra el tipo de dispositivo que desea dar de alta? </label>
  <a class="btn btn-info" type="button" href="/admin/cargarTipo"> Cargar nuevo tipo </a>
  <br>
  <br>
  
  
{{/partial}}

